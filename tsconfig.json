{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./script_folder", // Include all TypeScript files in the project
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["script_folder/components/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["script_folder/**/*.ts", "server.ts"], // Include `server.ts`
  "exclude": ["node_modules"]
}




  